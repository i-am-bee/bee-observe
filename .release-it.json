{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "header": "# Changelog",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["yarn lint", "yarn ts:check", "yarn test"],
    "after:bump": ["yarn build"]
  }
}
